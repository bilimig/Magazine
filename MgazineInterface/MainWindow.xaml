<Window x:Class="MgazineInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MgazineInterface" 
        xmlns:view="clr-namespace:MgazineInterface.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <TabControl x:Name="tabControl" SelectionChanged="TabControl_SelectionChanged">
            <TabItem Header="Add Order">
                <view:AddOrderView x:Name="addOrderView"/>
            </TabItem>
            <TabItem Header="Add Client">
                <view:AddClientView x:Name="addClientView"/>
            </TabItem>
            <TabItem Header="Add Product">
                <view:AddProductView x:Name="addProductView"/>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
